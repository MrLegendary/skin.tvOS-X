<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[Window.IsVisible(visualisation) | VideoPlayer.IsFullscreen] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding] + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(fullscreeninfo) + !Window.IsActive(videoosd) + !Window.IsActive(musicosd) + !Window.IsActive(subtitlesearch) + !Window.IsVisible(script-nextup-notification-NextUpInfo.xml) + IsEmpty(Window(home).Property(ShowXRay))</visible>
			<control type="group">
				<visible>Player.Paused + !Player.Forwarding + !Player.Rewinding</visible>
				<animation condition="System.IdleTime(4) + !Player.Caching + !Window.IsVisible(fullscreeninfo)" reversible="true" type="Conditional">
					<effect end="0" start="100" time="200" type="fade" />
				</animation>
				<control type="image">
					<width>1980</width>
					<height>210</height>
					<texture border="1">osd/mask_top.png</texture>
				</control>
				<include>PlayerTitles</include>
				<!-- Pause -->
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>321</width>
					<height>341</height>
					<texture>osd/Pause.png</texture>
					<visible>Player.Paused + !Player.Caching</visible>
					<animation condition="System.IdleTime(2)" reversible="true" type="Conditional">
						<effect end="0" start="100" time="200" type="fade" />
					</animation>
				</control>
				<control type="group">
					<visible>Player.Caching</visible>
					<!-- Busy -->
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_outer.png</texture>
						<animation effect="rotate" end="-360" center="auto" time="1120" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<width>94</width>
						<height>94</height>
						<texture>common/spinner_inner.png</texture>
						<animation effect="rotate" end="360" center="auto" time="1680" loop="true" reversible="false" condition="true">Conditional</animation>
					</control>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>
					<visible>!Window.IsVisible(fullscreeninfo)</visible>
				</control>
				<!--  Cache bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.ProgressCache</info>
					<texturebg border="4">osd/progress_back.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="4">osd/progress_cache.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<!--  Progress bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="4">osd/progress_bar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<control type="grouplist">
					<left>92</left>
					<bottom>38</bottom>
					<width>800</width>
					<height>40</height>
					<itemgap>4</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]HD[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,719) + !IntegerGreaterThan(VideoPlayer.VideoResolution,721)</visible>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]1080P[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,720)</visible>
				</control>
				<!--  SD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]SD[/B]</label>
					<visible>!IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>
					<!--  Current position -->
					<control type="label">
						<left>25</left>
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>fff3f3f3</textcolor>
						<label>$INFO[Player.Time]</label>
					</control>
					<!--  Divider -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>ff696969</textcolor>
						<label>/</label>
						<visible>!IsEmpty(Player.Time) + !IsEmpty(Player.Duration)</visible>
					</control>
					<!--  Total length -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>ff696969</textcolor>
						<label>$INFO[Player.Duration]</label>
					</control>



				</control>
				<!--  Current time -->
				<control type="label">
					<right>92</right>
					<bottom>45</bottom>
					<width>800</width>
					<height>30</height>
					<font>Reg27</font>
					<align>right</align>
					<textcolor>fff3f3f3</textcolor>
					<label>$INFO[System.Time]</label>
					<visible>!Window.IsVisible(fullscreeninfo)</visible>
				</control>
			</control>
			<control type="group">
				<visible>!Player.Paused + [Player.Seeking | Player.DisplayAfterSeek]</visible>
				<control type="image">
					<width>1980</width>
					<height>210</height>
					<texture border="1">osd/mask_top.png</texture>
				</control>
				<include>PlayerTitles</include>
				<control type="image">
					<bottom>0</bottom>
					<width>1980</width>
					<height>120</height>
					<texture>osd/mask.png</texture>					
					<visible>!Window.IsVisible(fullscreeninfo)</visible>
				</control>
				<!--  Cache bar -->
				<control type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.ProgressCache</info>
					<texturebg border="4">osd/progress_back.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="4">osd/progress_cache.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<!--  Progress bar -->
				<control id="2" type="progress">
					<left>92</left>
					<bottom>93</bottom>
					<width>1735</width>
					<height>11</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="4">osd/progress_bar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<control type="grouplist">
					<left>92</left>
					<bottom>38</bottom>
					<width>800</width>
					<height>40</height>
					<itemgap>4</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]HD[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,719) + !IntegerGreaterThan(VideoPlayer.VideoResolution,721)</visible>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]1080P[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,720)</visible>
				</control>
				<!--  SD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]SD[/B]</label>
					<visible>!IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>

					<!--  Current position -->
					<control type="label">
						<left>25</left>
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>fff3f3f3</textcolor>
						<label>$INFO[Player.Time]</label>
					</control>
					<!--  Divider -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>ff696969</textcolor>
						<visible>!IsEmpty(Player.Time) + !IsEmpty(Player.Duration)</visible>
						<label>/</label>
					</control>
					<!--  Total length -->
					<control type="label">
						<width>auto</width>
						<height>34</height>
						<font>Light27</font>
						<textcolor>ff696969</textcolor>
						<label>$INFO[Player.Duration]</label>
					</control>
				</control>
				<!--  Current time -->
				<control id="99" type="label">
					<right>92</right>
					<bottom>45</bottom>
					<width>800</width>
					<height>30</height>
					<font>Reg27</font>
					<align>right</align>
					<textcolor>fff3f3f3</textcolor>
					<label>$INFO[System.Time]</label>
					<visible>!Window.IsVisible(fullscreeninfo)</visible>
				</control>
			</control>
			<control type="group">
				<include>VisibleFadeAnimation</include>
				<visible>!Player.Forwarding + !Player.Rewinding + [Player.Seeking | Player.DisplayAfterSeek]</visible>
				<control type="image">
					<left>97</left>
					<bottom>123</bottom>
					<width>80</width>
					<height>80</height>
					<texture>$VAR[SeekStepIcon]</texture>
				</control>
				<control type="label">
					<centerleft>136</centerleft>
					<bottom>141</bottom>
					<width>50</width>
					<height>40</height>
					<align>center</align>
					<font>Reg20</font>
					<textcolor>ffe5e4e5</textcolor>
					<label>$VAR[SeekOffset]</label>
				</control>
				<control type="slider" id="401">
					<left>92</left>
					<bottom>105</bottom>
					<width>1735</width>
					<height>11</height>
					<texturesliderbar border="4" colordiffuse="00ffffff">osd/progress_back.png</texturesliderbar>
					<textureslidernib>osd/osd_seek_bar.png</textureslidernib>
					<textureslidernibfocus>osd/osd_seek_bar.png</textureslidernibfocus>
					<info>Player.SeekTime</info>
					<visible>!Player.Forwarding + !Player.Rewinding + Player.Seeking</visible>
				</control>
			</control>
		</control>
	</controls>
</window>